@using FirstDemo.ViewModel
@model ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link href="/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/layout/style.css">
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Roboto+Slab:wght@100..900&family=Work+Sans&display=swap"
          rel="stylesheet" />
    <title>Forget Password</title>
</head>
<body>
    <div class="discount" id="discount">
        <div class="formation">
            <div class="content">
                <h2>Forget Password</h2>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input class="input" type="text" placeholder="Enter Your Email" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                    <input type="submit" class="signup" value="submit">
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

