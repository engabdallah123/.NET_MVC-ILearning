@using FirstDemo.ViewModel
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link href="/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/layout/style.css">
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Roboto+Slab:wght@100..900&family=Work+Sans&display=swap"
          rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="discount" id="discount">
        <div class="formation">
            <div class="content">
                <h2>Login</h2>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input class="input" type="text" placeholder="Your Name" asp-for="UserName" />
                    <span asp-validation-for="UserName"></span>
 
                    <input class="input" type="password" placeholder="Your Password" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                   <div class="d-flex justify-content-between">
                        <div class="d-flex ">
                            <input class="form-check" asp-for="RememberMe" />
                            <label asp-for="RememberMe" class="m-1"></label>
                            <span asp-validation-for="RememberMe"></span>
                        </div>
                        <a asp-action="ForgotPassword" asp-controller="acount" class="text-danger text-decoration-none">I forgot my password</a>
                   </div>
                    
                    
                    <p class="ihave">
                        <a asp-action="Register" asp-controller="acount" class="text-decoration-none fw-bold mt-3">I Dont have account! Sign Up</a>
                    </p>
                    <input type="submit" class="signup" value="Login">
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
