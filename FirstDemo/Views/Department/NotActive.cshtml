@model IEnumerable<Department>
@{
    Layout = "_Layout1";
    ViewBag.Title = "Not Active";
}


        <div class="container">
            
              <a href="/Department/Index" class="btn btn-secondary fs-5">Go Back</a> 
            
            <table class="table  table-hover mt-2">
                <thead>
                    <tr>
                    <td scope="col" class="fw-bold">#</td>
                    <td scope="col" class="fw-bold">Id</td>
                    <td scope="col" class="fw-bold"> Name</td>
                    <td scope="col" class="fw-bold">Capacity</td>
                    <td scope="col" class="fw-bold">Date Of Creation</td>
                    <td scope="col" class="fw-bold">Actions</td>
                  
                    </tr>
                </thead>
            <tbody class="table-group-divider">
                @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="fs-2">No Data Founded</td>
                        </tr>
                    }
                    else
                    {
                    var index = 0;
                        foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@(index++)</th>
                                <td>@item.DeptId</td>
                                <td>@item.DeptName</td>
                                <td>@item.Students.Count</td>
                            <td>@item.DateOfCreation.ToShortDateString()</td>
                                <td>
                                    @if(User.IsInRole("Admin"))
                                       {
                                          <a class="btn btn-info text-light " asp-action="Active" asp-controller="Department" asp-route-id="@item.DeptId">Go To Active</a>
                                        }
                           
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <div id="div1">
            </div>
        </div>

       
       
